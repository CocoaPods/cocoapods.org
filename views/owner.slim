              td apps touched
            tr
              td.result = impact[:downloads].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse
              td combined downloads

            - if impact[:stars] > 0
              tr
                td.result = impact[:stars].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse
                td stargazers

            - if impact[:loc] > 0
              tr
                td.result = impact[:loc].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse
                td lines of code


    article.row
      - @pods.each do |pod|
        .col-sm-12.pods
