  section.container
    article.row
      .col-xs-3.impact.title
        p == "<span>" + @pods.length.to_s + "</span>pods"
      
      .col-xs-push-1.col-xs-8.impact

        table
          thead
            tr
              th
                h2 Community Impact
          tbody
            / tr
